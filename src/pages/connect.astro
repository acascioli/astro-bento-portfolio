---
import mountains from "../../public/assets/mountains.jpg";
import Cascioli_pic from "../../public/assets/Cascioli/Cascioli_pic.jpg";
import Cascioli_qr from "../../public/assets/Cascioli/Cascioli_qr_blue.svg";
import { Image } from "astro:assets";
import ConnectCard from "../components/sections/ConnectCard.astro";

import BaseLayout from "../layouts/BaseLayout.astro";

import { PROFILE } from "../content/profileData";
const SITE = PROFILE.site;
---

<BaseLayout title={SITE.SEO.title} description={SITE.SEO.description}>
  <main>
    <div class="h-screen">
      <div class="relative h-1/3 shadow-lg -mt-16">
        <Image
          src={mountains}
          alt="Mountains with snow."
          format="avif"
          quality={"mid"}
          class="h-full object-cover"
        />
        <div
          class="absolute top-20 m-auto flex w-full justify-center md:top-36"
        >
          <ConnectCard
            cv="/assets/Cascioli/Cascioli.pdf"
            vcard="/assets/Cascioli/Cascioli_vcard.vcf"
            title="Eng. PhD"
            name="Alessandro Cascioli"
            email="alessandro.cascioli@protonmail.com"
            phone="+39 348 5637707"
            image={Cascioli_pic}
            qr={Cascioli_qr}
          />
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
