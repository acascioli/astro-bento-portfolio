---
import { Image } from "astro:assets";

interface Props {
  name: string;
  title: string;
  email: string;
  pec?: string;
  phone: string;
  image: ImageMetadata;
  qr: ImageMetadata;
  cv: string;
  vcard: string;
}

const { title, image, name, vcard, qr, email, pec, phone } = Astro.props;
---

<div
  class="max-w-96 rounded-2xl px-8 py-4 shadow-lg dark:shadow-primary/20 backdrop-blur-md md:px-16 md:py-8 mb-16"
>
  <div class="flex flex-col items-center gap-y-4">
    <div
      class="mx-auto h-32 w-32 overflow-hidden rounded-bl-3xl rounded-tr-3xl border-4 border-white bg-cover bg-center md:mx-0 md:h-36 md:w-36"
    >
      <Image src={image} alt="Profile pic." />
    </div>
    <div class="text-center">
      <h1 class="text-xl font-bold md:text-2xl">{name}</h1>
      <p class="">{title}</p>
    </div>
    <div class="text-left">
      <div class="mb-2 flex flex-col md:mb-0 md:flex-row md:gap-1">
        <p class="">
          <strong>Email:</strong>
        </p>
        <p class="">
          {email}
        </p>
      </div>
      {
        pec ? (
          <div class="mb-2 flex flex-col md:mb-0 md:flex-row md:gap-1">
            <p class="">
              <strong>PEC: </strong>
            </p>
            <p class="">{pec}</p>
          </div>
        ) : (
          <div />
        )
      }
      <div class="flex flex-col md:flex-row md:gap-1">
        <p class="">
          <strong>Phone: </strong>
        </p>
        <p class="">
          {phone}
        </p>
      </div>
    </div>
    <a href={vcard} download="vcard">
      <Image
        src={qr}
        alt="Contact qr code."
        class="h-[130px] w-[130px] cursor-pointer rounded-lg bg-white shadow-md shadow-primary/30 transition duration-200 hover:shadow-lg hover:shadow-primary/30 md:h-[150px] md:w-[150px]"
      />
    </a>
    <!-- <div>
      <a
        href={cv}
        download
        class="bg-[#0073E6] shadow-[#0073E6]/30 text-white py-2 px-4 rounded-lg shadow-md cursor-pointer hover:shadow-lg hover:shadow-[#0073E6]/30 transition duration-200"
        >Resume</a
      >
    </div> -->
    <!-- Arrow pointing to the button -->
    <div class="rotate-180 transform">
      <svg
        class="h-8 w-8 animate-bounce"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 9l-7 7-7-7"></path>
      </svg>
    </div>
    <div class="text-sm">Add to contact!</div>
  </div>
</div>
